    <!-- 查询所有的学校信息 -->
    <select id="queryAllSchools" resultMap="schoolInfoResultMap">
    	SELECT
			u.sid,
			u.university_name,
			u.province
		
		FROM
			university u
		WHERE
			1=1
		ORDER BY
			u.sid
