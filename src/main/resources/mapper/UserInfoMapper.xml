    <!-- 根据电话号码查询教员信息 -->  
    <select id="queryTeacherInfoByTelephone"  resultMap="userInfoResultMap" parameterType="java.lang.String">    
        	
        select
        	t.teacher_id, 
        	t.telephone,
			t.name,
			t.sex,	
			t.openId,
			t.picture,
			t.vacation_status,
			t.charges_standard,
			t.logon_status,
			t.audit_status,
			t.resume_complete,
			t.teacher_level,
			t.home,
			t.idcard,
			t.begin_school_time,
			t.school,
			t.major,
			t.address,
			t.teacher_tag,
			t.teach_level,
			t.teach_grade,
			t.teach_brance,
			t.teach_branch_slave,
			t.teach_address,
			t.teach_time,
			t.teacher_points,
			t.singUp_count,
			t.choose_count,
			t.employ_rate,
			t.resumption_count,
			t.resumption_rate,
			t.teacher_profile,
			t.teacher_certificate,
			t.experience,
			t.create_time,
			t.update_time
		from 
			teacher t
		where 
			t.status=1
		and
			t.telephone=#{telephone}  
    </select>  
    
